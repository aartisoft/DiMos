        <activity android:name=".Views.Activities.Activity_Travels" />
        <activity android:name=".Views.Activities.Activity_Transport" />
        <activity android:name=".Views.Activities.Activity_Cars" />
        <activity android:name=".Views.Activities.Activity_Bike" />
        <activity android:name=".Views.Activities.Activity_Properties" />
        <activity android:name=".Views.Activities.Activity_City" />
        <activity android:name=".Views.Activities.Activity_Market" />
        <activity android:name=".Views.Activities.MainActivity" />
        <activity android:name=".Views.Activities.Activity_Advertise_Details" />
